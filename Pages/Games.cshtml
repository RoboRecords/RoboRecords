@{
    ViewData["Title"] = "Games";
}
<div class="text-center">
    <h1 class="">Games/Levelpacks</h1>
    <h2 class="lead">Choose the game you would like to see speedrun info of.</h2>
</div>
<div style="text-align: center" id="gameDiv" runat="server">
    @foreach (var game in Games.RoboGames)
    {
        <div class="gameBox box-shadow" style="background-image: url(@game.IconPath); background-position: center;">
            <a href=@game.IdName style="color: white; text-underline-offset: 10px">
                <div style="width: 100%; height: 100%">
                <span class="gameText title-font">@game.Name</span>
                    
                </div>
            </a>
        </div>
    }
</div>

